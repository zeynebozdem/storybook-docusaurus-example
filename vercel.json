{
  "version": 2,
  "builds": [
    {
      "src": "package.json",
      "use": "@vercel/static-build",
      "config": {
        "buildCommand": "npm install && npm run build:all",
        "outputDirectory": "docusaurus/build"
      }
    },
    {
      "src": "packages/core/storybook-static/**",
      "use": "@vercel/static"
    }
  ],
  "routes": [
    {
      "src": "/storybook/(.*)",
      "dest": "/packages/core/storybook-static/$1"
    },
    {
      "src": "/storybook",
      "dest": "/packages/core/storybook-static/index.html"
    },
    {
      "src": "/(.*)",
      "dest": "/docusaurus/build/$1"
    }
  ]
} 